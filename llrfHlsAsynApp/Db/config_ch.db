record(ao, "$(DEVICE):REFWGT$(CH)")
{
    field(PINI, "YES")
    field(DESC, "reference weight for channel $(CH)")
    field(DTYP, "asynFloat64")
    field(OUT,  "@asyn($(PORT),0) ref_weight_ch$(CH)")
    field(OMSL, "supervisory")
    field(SCAN, "Passive")
    field(PREC, "3")
    field(HHSV, "MAJOR")
    field(HSV,  "MINOR")
    field(LSV,  "MINOR")
    field(LLSV, "MAJOR")
    info(autosaveFields, "VAL LOLO LOW HIGH HIHI")
}

