record(ai, "$(DEVICE):PACT_TS$(TS_N)")
{
    field(DESC, "actual phase for timeslot $(TS)")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT),0) p_act_br_t$(TS)")
    field(SCAN, "I/O Intr")
    field(PREC, "3")
    field(HHSV, "MAJOR")
    field(HSV,  "MINOR")
    field(LSV,  "MINOR")
    field(LLSV, "MAJOR")
    field(TSE,  "-2")
#    info(autosaveFields, "LOLO LOW HIGH HIHI")
}

