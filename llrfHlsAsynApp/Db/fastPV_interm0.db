record(ai, "$(DEVICE):$(TS_N)_PACT")
{
    field(DESC, "actual phase for $(TS_N)")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT),0) p_act_br_$(TS_ARG)")
    field(SCAN, "I/O Intr")
    field(PREC, "3")
    field(TSE,  "-2")
}

record(ai, "$(DEVICE):$(TS_N)_AACT")
{
    field(DESC, "actual amplitude for $(TS_N)")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT),0) a_act_br_$(TS_ARG)")
    field(SCAN, "I/O Intr")
    field(PREC, "3")
    field(TSE,  "-2")
}


