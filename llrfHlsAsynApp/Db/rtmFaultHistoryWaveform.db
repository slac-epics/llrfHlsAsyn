record(waveform, "$(PRIMARY):$(MICRO):$(UNIT):FAULTHIST$(HIST)_RTM_BCURR_WF")
{
 #  field(PINI, "YES")
    field(DESC, "Klystron Beam Current")
    field(DTYP, "asynFloat64ArrayIn")
    field(INP,  "@asyn($(PORT),0) rtmBeamCurrentHist$(HIST)")
    field(SCAN, "I/O Intr")
    field(FTVL, "DOUBLE")
    field(NELM, "$(SIZE)")
    field(TSE,  "-2")
}

