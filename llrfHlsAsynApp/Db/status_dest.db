
#
#  destination aware Jitter PVs
#

record(ai, "$(DEVICE):PACT_JITT")
{
    field(DESC, "PACT Jitter for timeslot NT")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT),0) phase_jitter_dest$(DEST_IDX)")
    field(SCAN, "I/O Intr")
    field(PREC, "3")
    field(EGU,  "degree")
}

