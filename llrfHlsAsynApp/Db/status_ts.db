record(ai, "$(DEVICE):PACT$(TS_N)")
{
    field(DESC, "actual phase for timeslot $(TS)")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT),0) p_fb_ts$(TS)")
    field(SCAN, "I/O Intr")
    field(PREC, "3")
    field(HHSV, "MAJOR")
    field(HSV,  "MINOR")
    field(LSV,  "MINOR")
    field(LLSV, "MAJOR")
    info(autosaveFields, "LOLO LOW HIGH HIHI")
}

